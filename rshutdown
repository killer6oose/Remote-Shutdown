using System;
using System.Windows.Forms;
using System.Net;
using System.Diagnostics;

namespace RemoteShutdownApp
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void btnShutdown_Click(object sender, EventArgs e)
        {
            try
            {
                string computerName = txtComputerName.Text.Trim();
                string shutdownTime = txtShutdownTime.Text.Trim();

                // Convert shutdown time to DateTime object
                DateTime dtShutdownTime = DateTime.Parse(shutdownTime);

                // Calculate time until shutdown
                TimeSpan tsTimeUntilShutdown = dtShutdownTime.Subtract(DateTime.Now);

                // Create command to be executed
                string command = string.Format("shutdown /s /m \\\\{0} /t {1}",
                    computerName, (int)tsTimeUntilShutdown.TotalSeconds);

                // Execute command
                Process.Start("cmd.exe", "/c " + command);

                MessageBox.Show(string.Format("Shutdown command sent to {0} for {1}.",
                    computerName, dtShutdownTime.ToString()), "Remote Shutdown",
                    MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
            catch (Exception ex)
            {
                MessageBox.Show("Error: " + ex.Message, "Remote Shutdown",
                    MessageBoxButtons.OK, MessageBoxIcon.Error);
            }
        }
    }
}
